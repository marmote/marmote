<?xml version="1.0"?>
<block>
  <name>PN synchronizer</name>
  <key>marmote_pn_synchronizer</key>
  <category>MarmotE</category>
  <import>import marmote</import>
  <make>marmote.pn_synchronizer(
    debug=$debug,
    mask=$mask,
    seed=$seed,
    preamble_len=$preamble_len,
    spread_factor=$spread_factor,
    oversample_factor=$oversample_factor,
    threshold_factor_rise=$threshold_factor_rise,
    look_ahead=$look_ahead,
    alpha=$alpha
    )</make>

  <param>
    <name>Debug</name>
      <key>debug</key>
      <value>False</value>
      <type>bool</type>
      <option>
        <name>Enable</name>
        <key>True</key>
      </option>
      <option>
        <name>Disable</name>
        <key>False</key>
      </option>
    </param>

  <param>
    <name>Mask</name>
    <key>mask</key>
    <value>0x12</value>
    <type>int</type>
  </param>

  <param>
    <name>Seed</name>
    <key>seed</key>
    <value>0x10</value>
    <type>int</type>
  </param>

  <param>
    <name>Preamble length (bits)</name>
    <key>preamble_len</key>
    <value>4</value>
    <type>int</type>
  </param>

<param>
    <name>Spread factor</name>
    <key>spread_factor</key>
    <value>16</value>
    <type>int</type>
  </param>

  <param>
    <name>Oversample factor</name>
    <key>oversample_factor</key>
    <value>1</value>
    <type>int</type>
  </param>

  <param>
    <name>Threshold factor rise</name>
    <key>threshold_factor_rise</key>
    <value>100.0</value>
    <type>float</type>
  </param>

  <param>
    <name>Look ahead</name>
    <key>look_ahead</key>
    <value>10</value>
    <type>int</type>
  </param>

  <param>
    <name>Alpha</name>
    <key>alpha</key>
    <value>0.01</value>
    <type>float</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  <source>
    <name>filt_out</name>
    <type>float</type>
    <!-- <optional>1</optional> -->
  </source>

  <source>
    <name>avg_out</name>
    <type>float</type>
    <optional>1</optional>
  </source>

</block>
