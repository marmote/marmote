<?xml version="1.0"?>
<block>
    <name>PN despreader</name>
    <key>marmote_pn_despreader</key>
    <category>MarmotE</category>
    <import>import marmote</import>
    <make>marmote.pn_despreader(
        mask=$mask,
        seed=$seed,
        seed_offset=$seed_offset,
        payload_len=$payload_len,
        spread_factor=$spread_factor)
    </make>

    <param>
        <name>Mask</name>
        <key>mask</key>
        <value>0x12</value>
        <type>int</type>
    </param>

    <param>
        <name>Seed</name>
        <key>seed</key>
        <value>0x10</value>
        <type>int</type>
    </param>

    <param>
        <name>Seed offset</name>
        <key>seed_offset</key>
        <value>0</value>
        <type>int</type>
    </param>

    <param>
        <name>Payload length (bytes)</name>
        <key>payload_len</key>
        <value>4</value>
        <type>int</type>
    </param>

    <param>
        <name>Spread factor</name>
        <key>spread_factor</key>
        <value>16</value>
        <type>int</type>
    </param>

    <sink>
        <name>in</name>
        <type>float</type>
    </sink>

    <source>
        <name>out</name>
        <type>message</type>
    </source>
</block>
