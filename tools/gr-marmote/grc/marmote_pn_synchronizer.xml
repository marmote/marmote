<?xml version="1.0"?>
<block>
  <name>PN synchronizer</name>
  <key>marmote_pn_synchronizer</key>
  <category>MarmotE</category>
  <import>import marmote</import>
  <make>marmote.pn_synchronizer(reverse=$reverse, mask=$mask, seed=$seed, preamble_len=$preamble_len, spread_factor=$spread_factor)</make>
  <param>

    <name>Reverse</name>
    <key>reverse</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>

  <param>
    <name>Mask</name>
    <key>mask</key>
    <value>0x12</value>
    <type>int</type>
  </param>

  <param>
    <name>Seed</name>
    <key>seed</key>
    <value>0x10</value>
    <type>int</type>
  </param>

  <param>
    <name>Preamble length (bits)</name>
    <key>preamble_len</key>
    <value>4</value>
    <type>int</type>
  </param>

<param>
    <name>Spread factor</name>
    <key>spread_factor</key>
    <value>16</value>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
  </source>
  <source>
    <name>filt_out</name>
    <type>float</type>
  </source>
</block>
