<?xml version="1.0"?>
<block>
  <name>PN synchronizer</name>
  <key>marmote_pn_synchronizer</key>
  <category>MarmotE</category>
  <import>import marmote</import>
  <make>marmote.pn_synchronizer(
    debug=$debug,
    reverse=$reverse,
    mask=$mask,
    seed=$seed,
    preamble_len=$preamble_len,
    spread_factor=$spread_factor,
    threshold=$threshold,
    oversample_factor=$oversample_factor
    )</make>

  <param>
    <name>Debug</name>
      <key>debug</key>
      <value>False</value>
      <type>bool</type>
      <option>
        <name>Enable</name>
        <key>True</key>
      </option>
      <option>
        <name>Disable</name>
        <key>False</key>
      </option>
    </param>

  <param>
    <name>Reverse</name>
    <key>reverse</key>
    <value>True</value>
    <type>bool</type>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>

  <param>
    <name>Mask</name>
    <key>mask</key>
    <value>0x12</value>
    <type>int</type>
  </param>

  <param>
    <name>Seed</name>
    <key>seed</key>
    <value>0x10</value>
    <type>int</type>
  </param>

  <param>
    <name>Preamble length (bits)</name>
    <key>preamble_len</key>
    <value>4</value>
    <type>int</type>
  </param>

<param>
    <name>Spread factor</name>
    <key>spread_factor</key>
    <value>16</value>
    <type>int</type>
  </param>

  <param>
    <name>Threshold</name>
    <key>threshold</key>
    <value>0.75</value>
    <type>float</type>
  </param>

  <param>
    <name>Oversample factor</name>
    <key>oversample_factor</key>
    <value>1</value>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
  <source>
    <name>filt_out</name>
    <type>float</type>
    <!-- <optional>1</optional> -->
  </source>
</block>
