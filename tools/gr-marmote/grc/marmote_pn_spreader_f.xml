<?xml version="1.0"?>
<block>
  <name>PN spreader</name>
  <key>marmote_pn_spreader_f</key>
  <category>MarmotE</category>
  <import>import marmote</import>
  <make>marmote.pn_spreader_f(
    debug=$debug, mask=$mask, seed=$seed, spread_factor=$spread_factor, preamble_len=$preamble_len)</make>
    
  <param>
    <name>Debug</name>
    <key>debug</key>
    <value>False</value>
    <type>bool</type>
    <option>
      <name>Enable</name>
      <key>True</key>
    </option>
    <option>
      <name>Disable</name>
      <key>False</key>
    </option>
  </param>

  <param>
    <name>Preamble length (bits)</name>
    <key>preamble_len</key>
    <value>4</value>
    <type>int</type>
  </param>

  <param>
    <name>Mask</name>
    <key>mask</key>
    <value>0x00</value>
    <type>int</type>
  </param>

  <param>
    <name>Seed</name>
    <key>seed</key>
    <value>0x01</value>
    <type>int</type>
  </param>

  <param>
    <name>Spread factor</name>
    <key>spread_factor</key>
    <value>16</value>
    <type>int</type>
  </param>

  <sink>
    <name>in</name>
    <type>message</type>
  </sink>

  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
